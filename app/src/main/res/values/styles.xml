<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.Material2.FAB" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Material2FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material2.FAB</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="LoadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/LoadingDialogAnimation</item>
    </style>

    <style name="LoadingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>